{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Debug FastAPI",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/app",
                    "remoteRoot": "/fastapi/app"
                }
            ],
            "justMyCode": false
        }
    ]
}